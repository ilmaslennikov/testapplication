@using System.Web.Optimization
@using DomainModel
<!DOCTYPE html>
<html lang="ru">
    <head>
        <meta charset="utf-8" />
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="Cospas-sarsat automation system">
        <meta name="author" content="Maslennikov Ilia">
        <title>@ViewBag.Title</title>
        <script type="text/javascript">
            function RegExpressions() {
                this.Phone = "@RegularExpressions.Phone.Replace("\\","\\\\")";
                this.Email = "@RegularExpressions.Email.Replace("\\", "\\\\")";
                this.Hex = "@RegularExpressions.Hex.Replace("\\", "\\\\")";
                this.Password = "@RegularExpressions.Password.Replace("\\","\\\\")";
            }
        </script>
        @Scripts.Render("~/bundles/Scripts")
        @Styles.Render("~/Content/css")
    </head>


<body>
    <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("АСУ РАДИОМАЯК", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse">
                @Html.Action("Menu", "Shared")
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>
    <!-- Page Content -->
    <div class="container">
        @RenderBody()
    </div>
    <footer>
        <div class="navbar navbar-default navbar-fixed-bottom">
            <div class="container">
                <p class="navbar-text pull-left">Copyright &copy; Масленников Илья Александрович,2016</p>
            </div>
        </div>
    </footer>
</body>
</html>